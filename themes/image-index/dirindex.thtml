<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:py="http://genshi.edgewall.org/">
<head>
  <title py:if="t.album_name" py:content="t.album_name"></title>
  <title py:if="not t.album_name" py:content="t.title"></title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="Generator" content="lazygal $t.lazygal_version" />
  <link rel="stylesheet" type="text/css" media="screen,projection" title="Original" href="${t.rel_root}shared/style.css" />
  <link rel="alternate" type="application/rss+xml" title="Recent galleries" href="${t.rel_root}index.xml" />
</head>

<body>

<h1 py:if="t.album_name" py:content="t.album_name"></h1>
<h1 py:if="not t.album_name" py:content="t.title"></h1>

<p><a href="..">Parent</a></p>

<p py:if="t.album_description" class="description" py:content="t.album_description"></p>

<p>
    <py:for each="i, ozise_index_link in enumerate(t.ozise_index_links)">
        <a py:strip="not ozise_index_link.link"
           href="$ozise_index_link.link">$ozise_index_link.name</a>
        <py:if test="i != len(t.ozise_index_links)-1"> | </py:if>
    </py:for>
</p>

<div id="subgal_links">
    <div py:for="subgal_link in t.subgal_links" class="subgal_link">
        <div py:if="subgal_link.album_picture" class="subgal_image">
            <a href="$subgal_link.link">
                <img class="subgal" src="$subgal_link.album_picture" />
            </a>
        </div>
        <div class="subgal_name">
            <h4 class="subgal_name">
                <a href="$subgal_link.link">
                    <py:if test="subgal_link.album_name">
                        $subgal_link.album_name
                    </py:if>
                    <py:if test="not subgal_link.album_name">
                        $subgal_link.name
                    </py:if>
                </a>
            </h4>
            <span py:if="subgal_link.album_description" class="subgal_description">
                <a href="$subgal_link.link">
                    $subgal_link.album_description
                </a>
            </span>
        </div>
    </div>
</div>

<div py:if="t.images" id="image_links">
    <p>
        <a py:for="image in t.images" href="$image.link"><img src="$image.thumb" width="$image.width" height="$image.height" alt="$image.image_name thumb"/></a>
    </p>
</div>

<div id="footer">
    <hr />
    <p>Generated by <a href="http://sousmonlit.dyndns.org/~niol/playa/oss:lazygal">lazygal $t.lazygal_version</a> on ${t.gen_date}.</p>
</div>

</body>

</html>
