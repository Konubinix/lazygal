<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:py="http://genshi.edgewall.org/">
<head>
  <title py:if="not t.album_name" py:content="t.title"></title>
  <title py:if="t.album_name" py:content="t.album_name"></title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="Generator" content="lazygal $t.lazygal_version" />
  <py:for each="style in t.styles">
    <py:if test="style.alternate">
        <link rel="alternate stylesheet" type="text/css" media="screen,projection" title="$style.name" href="${t.rel_root}shared/${style.filename}.css" />
    </py:if>
    <py:if test="not style.alternate">
        <link rel="stylesheet" type="text/css" media="screen,projection" title="$style.name" href="${t.rel_root}shared/${style.filename}.css" />
    </py:if>
  </py:for>
  <link rel="alternate" type="application/rss+xml" title="Recent galleries" href="${t.rel_root}index.xml" />
</head>

<body>

<h1 py:if="t.album_name" py:content="t.album_name"></h1>
<h1 py:if="not t.album_name" py:content="t.title"></h1>

<p><a href="..">Parent</a></p>

<p py:if="t.album_description" class="description" py:content="t.album_description"></p>

<p py:if="len(t.osize_index_links) > 1">
    <py:for each="i, osize_index_link in enumerate(t.osize_index_links)">
        <a py:strip="not osize_index_link.link"
           href="$osize_index_link.link">$osize_index_link.name</a>
        <py:if test="i != len(t.osize_index_links)-1"> | </py:if>
    </py:for>
</p>

<div id="subgal_links">
    <div py:for="subgal_link in t.subgal_links" class="subgal_link">
        <div py:if="subgal_link.album_picture" class="subgal_image">
            <a href="$subgal_link.link">
                <img src="$subgal_link.album_picture" alt="$subgal_link.album_name album picture" />
            </a>
        </div>
        <div class="subgal_name">
            <h4 class="subgal_name">
                <a href="$subgal_link.link">
                    <py:if test="subgal_link.album_name">
                        $subgal_link.album_name
                    </py:if>
                    <py:if test="not subgal_link.album_name">
                        $subgal_link.name
                    </py:if>
                </a>
            </h4>
            <div py:if="subgal_link.album_description" class="subgal_description">
                <p>$subgal_link.album_description</p>
            </div>
        </div>
    </div>
</div>

<div py:if="t.images" id="image_links">
    <p>
        <a py:for="image in t.images" href="$image.link"><img src="$image.thumb" width="$image.thumb_width" height="$image.thumb_height" alt="$image.thumb_name thumb"/></a>
    </p>
</div>

<div class="footer" py:if="t.footer" py:content="t.footer">
</div>

<div class="footer" id="lazygalfooter">
    <p>Generated by <a href="http://sousmonlit.dyndns.org/~niol/playa/oss:lazygal">lazygal</a> on ${t.gen_date}.</p>
</div>

</body>

</html>
